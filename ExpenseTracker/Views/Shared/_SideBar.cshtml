<ejs-sidebar id="sidebar" width="290px" enableDock dockSize="100px" target=".dock-target">
    <e-content-template>

        <div class="logo-wrapper">
            <div class="app-logo">
                <img src="#" class="fa-solid" alt="Logo" />
            </div>
            <div class="w-100"></div>
            <i id="sidebar-toggler" class="fa-solid"></i>
        </div>

        <div class="profile-wrapper">
            <img class="profile-pic" src="~/profile.jpg" />
            <div class="titles d-flex flex-column ps-3">
                <h6 class="mb-0">Wallet App</h6>
                <span class="text-muted">Merem</span>
            </div>
        </div>

        <ejs-menu id="menu" items="menuItems" orientation="Vertical" hamburgerMode></ejs-menu>
    </e-content-template>
</ejs-sidebar>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        dockBar = document.querySelector('#sidebar').ej2_instances[0];
        document.querySelector('#sidebar-toggler').onclick = function(){
            dockBar.toggle();
        }
    })

</script>